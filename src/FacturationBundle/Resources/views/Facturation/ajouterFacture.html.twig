{% extends "::base.html.twig" %}
{% block page_title %}<h1>Gestion des Reglements</h1>{% endblock %}
{% block page_subtitle %}<small></small>{% endblock %}
{% block page_content %}

    <form method="post">
        <div class="col-lg-8">
            <br>
            <br>
            <div class="form-group">
                <label class="control-label col-sm-2" for ="numClientFac">Numéro du client Facture :</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="numClientFac" name="numClientFac" value="" >
                </div>
            </div>
            <br>
            <br>
            <div class="form-group">
                <label class="control-label col-sm-2" for ="dateFac">Date Facture:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="dateFac" name="dateFac" value="" >
                </div>
            </div>
            <br>
            <br>
            <div class="form-group">
                <label class="control-label col-sm-2" for ="montantTTCFac">Montant TTC:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="montantTTCFac" name="montantTTCFac" value="" >
                </div>
            </div>
            <br>
            <br>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox" name="client">
                        <label><input type="checkbox" name="client">Client</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <a href="#" class="btn btn-primary"><i class="glyphicon glyphicon-chevron-left"></i>Retour à la liste</a>
                    <button type="submit" class="btn btn-success">Valider</button>
                </div>
            </div>

        </div>

    </form>


{% endblock %}