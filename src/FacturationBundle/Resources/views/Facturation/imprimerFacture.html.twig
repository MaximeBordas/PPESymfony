{% extends "::base.html.twig" %}
{% block page_title %} <center> <u>  <h1> Gestion des factures </h1> </u> </center> {% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}

    <div class="col-lg-6">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>Libell√©</th>
                <th>Montant TTC</th>
                <th>Date facture</th>
                <th>Taux de remise</th>
            </tr>
            </thead>
            {% for facture in lesFactures %}
                <tbody>
                <tr>
                    <td>{{ facture.libFacture }}</td>
                    <td>{{ facture.montantTTC }}</td>
                    <td>{{ facture.dateFacture|date('d-m-Y') }}</td>
                    <td>{{ facture.txRemise }}</td>
                    <td> <a class="btn btn-success" href="{{ path('facturation_afficher_facture_PDF', {'id': facture.id}) }}"> Imprimer la facture </a>  </td>
                </tr>
                </tbody>
            {% else %}
                <td>Pas de facture </td>
            {% endfor %}
        </table>
    </div>

{% endblock %}