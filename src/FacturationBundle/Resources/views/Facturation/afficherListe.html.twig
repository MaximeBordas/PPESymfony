{% extends "::base.html.twig" %}
{% block page_content %}
    <div class="col-lg-12">
        <h2>
            Liste des produits
        </h2>




        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>NOM</th>
                </tr>
                </thead>
                    <tbody>
                    {% for facture in lalisteFacture %}
