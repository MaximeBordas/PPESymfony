{% extends "::base.html.twig" %}
{% block page_title %}<center> <u>  <h1> Gestion des Règlements </h1> </u> </center> {% endblock %}
{% block page_subtitle %}{% endblock %}
{% block page_content %}

    <div class="col-lg-10">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>Libellé</th>
                <th>Montant TTC</th>
                <th>Date facture</th>
                <th>Taux de remise</th>
                <th>Statut</th>

            </tr>
            </thead>
            {% for facture in lesFactures %}
                <tbody>
                <tr>
                    <td><a href="{{ path('facturation_afficher_facture', {'id': facture.id}) }}">{{ facture.libFacture }}</a></td>
                    <td>{{ facture.montantTTC }}</td>
                    <td>{{ facture.dateFacture|date('d-m-Y') }}</td>
                    <td>{{ facture.txRemise }}</td>
                    {% if facture.factureRegler == 1 %}
                        <td style="color: green;">Facture réglée</td>
                    {% else %}
                        <td style="color: red;">Facture non reglée</td>
                    {% endif %}
                    <td><a href="{{ path('facturation_facture_gestion_d_un_reglement', {'id': facture.id}) }}">Gestion du réglement.</a></td>
                </tr>
                </tbody>
            {% else %}
                <td>Pas de projet</td>
            {% endfor %}
        </table>
    </div>

{% endblock %}