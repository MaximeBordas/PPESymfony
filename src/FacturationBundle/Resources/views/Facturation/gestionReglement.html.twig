{% extends "::base.html.twig" %}
{% block page_title %}<center> <u>  <h1> Gestion des Règlements </h1> </u> </center> {% endblock %}
{% block page_subtitle %}{% endblock %}
{% block page_content %}

    <div class="col-lg-6">
        <form method="post">
                <div class="form-group">
                    <h4 class="control-label col-sm-6" for ="numFacture">Numéro de facture:</h4> <br>
                    <div class="col-sm-10">
                        {#<input type="text" class="form-control" id="numFacture" name="numFacture" placeholder="Nom de la pharmacie">#}
                        <select class="form-control" id="numFacture">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                        </select>
                        <br>
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <h4 class="control-label col-sm-6" for ="anneeFacture">Année Facture :</h4> <br>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="anneeFacture" name="anneeFacture" value="uneAnnee" readonly> <br>
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <h4 class="control-label col-sm-6" for ="numClient">Numéro du client:</h4> <br>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="numClient" name="numClient" value="unNumClient" readonly> <br>
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <h4 class="control-label col-sm-6" for ="montantTTC">Montant TTC:</h4> <br>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="montantTTC" name="montantTTC" value="unMontantRegl" readonly> <br>
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox" name="client">
                            <label><input type="checkbox" name="client">Client</label>
                        </div>
                    </div>
                </div>
            <br>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <a href="#" class="btn btn-primary"><i class="glyphicon glyphicon-chevron-left"></i>Retour à la liste</a>
                        <button type="submit" class="btn btn-success">Valider</button>
                    </div>
                </div>
        </form>
    </div>

{% endblock %}