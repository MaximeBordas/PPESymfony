{% extends "::base.html.twig" %}
{% block page_title %}<u> <h1><center>Consultation d'une facture</center></h1></u>{% endblock %}
{% block page_subtitle %}<small></small>{% endblock %}
{% block page_content %}

    <div class="container">
        <div class="row">
                <div class="col-lg-6">
                    <h4>{{ laFacture.libFacture }}</h4>
                    <small class="pull">Order # {{ laFacture.id }}</small>
                </div>
                <hr> <br> <br>
            <div class="col-lg-6">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-1">
            </div>
                <div class="col-lg-2">
                    <address>
                        <strong>Billed To:</strong><br>
                        John Smith<br>
                        1234 Main<br>
                        Apt. 4B<br>
                        Springfield, ST 54321
                    </address>
                </div>
                <div class="col-lg-2">
                    <address>
                        <strong>Shipped To:</strong><br>
                        Jane Smith<br>
                        1234 Main<br>
                        Apt. 4B<br>
                        Springfield, ST 54321 <br> <br>
                    </address>
                </div>

            <div class="col-lg-2">
                <address>
                    <strong>Mode de Payement:</strong><br>
                    {{ laFacture.modeReglement.libModReglement }}
                </address>
            </div>
            <div class="col-lg-2">
                <address>
                    <strong>Date de la facture:</strong><br>
                    {{ laFacture.datefacture|date("m/d/Y") }}<br><br>
                </address>
            </div>
            <div class="col-lg-2">
                <address>
                    <strong>Date du devis:</strong><br>
                    {{ laFacture.unDevis.dateDevis|date("m/d/Y") }}<br><br>
                </address>
            </div>
            <div class="col-lg-1">
            </div>
        </div>
    </div>

    <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>Order summary</strong></h3>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-condensed">
                                <thead>
                                <tr>
                                    <td><strong>Libelle</strong></td>
                                    <td class="text-center"><strong>Taux TVA</strong></td>
                                    <td class="text-center"><strong>Montant HT</strong></td>
                                    <td class="text-right"><strong>Montant TTC</strong></td>
                                </tr>
                                </thead>
                                <tbody>
                                <!-- foreach ($order->lineItems as $line) or some such thing here -->
                                <tr>
                                    <td>{{ laFacture.libFacture }}</td>
                                    <td class="text-center">{{ laFacture.Tva.tauxTva }}</td>
                                    <td class="text-center">{{ laFacture.montantHT }}</td>
                                    <td class="text-right">{{ laFacture.montantTTC }}</td>
                                </tr>
                                <tr>
                                    <td class="thick-line"></td>
                                    <td class="thick-line"></td>
                                    <td class="thick-line text-center"><strong>Remise</strong></td>
                                    <td class="thick-line text-right">{{ laFacture.montantRemise }}</td>
                                </tr>
                                <tr>
                                    <td class="no-line"></td>
                                    <td class="no-line"></td>
                                    <td class="no-line text-center"><strong>Total</strong></td>
                                    <td class="no-line text-right">{{ laFacture.montantTTC - laFacture.montantRemise }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <div class="row">
    <div class="col-lg-3">
    </div>
        <div class="col-lg-6">
            <a href="#" class="btn btn-primary"><i class="glyphicon glyphicon-chevron-left"></i>Retour Ã  la liste</a>
            <a href="#" class="btn btn-info"><i class="glyphicon glyphicon-edit"></i>Modifier la pharmacie.</a>
            <a href="#" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i>Supprimer la pharmacie.</a>
        </div>
        <div class="col-lg-3">
        </div>
    </div>



{% endblock %}